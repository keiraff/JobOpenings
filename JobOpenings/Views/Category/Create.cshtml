@model JobOpenings.Models.Category
@{
    ViewData["Title"] = "Create Vacancy";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <style>
        .form-signin {
            max-width: 70%;
            padding: 15px;
            margin: 0 auto;
        }

            .form-signin .form-signin-heading {
                margin-bottom: 10px;
            }

        .input {
            margin-bottom: 5px;
            border-bottom-left-radius: 0;
            border-bottom-right-radius: 0;
        }

        .button {
            margin-top: 10px;
        }

        .text-danger {
            margin-bottom: 5px;
            text-align: left;
        }

        .validation-summary-errors {
            color: #d9534f;
        }

        .label {
            margin-right: 3px;
        }
    </style>

</head>

<body>
    <div class="container">
        <main>
            <div class="row">
                <div>
                    <button onclick="document.location='../Category';" class="btn btn-lg" style="background-color:transparent;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
                            <path d="M6.598 5.013a.144.144 0 0 1 .202.134V6.3a.5.5 0 0 0 .5.5c.667 0 2.013.005 3.3.822.984.624 1.99 1.76 2.595 3.876-1.02-.983-2.185-1.516-3.205-1.799a8.74 8.74 0 0 0-1.921-.306 7.404 7.404 0 0 0-.798.008h-.013l-.005.001h-.001L7.3 9.9l-.05-.498a.5.5 0 0 0-.45.498v1.153c0 .108-.11.176-.202.134L2.614 8.254a.503.503 0 0 0-.042-.028.147.147 0 0 1 0-.252.499.499 0 0 0 .042-.028l3.984-2.933zM7.8 10.386c.068 0 .143.003.223.006.434.02 1.034.086 1.7.271 1.326.368 2.896 1.202 3.94 3.08a.5.5 0 0 0 .933-.305c-.464-3.71-1.886-5.662-3.46-6.66-1.245-.79-2.527-.942-3.336-.971v-.66a1.144 1.144 0 0 0-1.767-.96l-3.994 2.94a1.147 1.147 0 0 0 0 1.946l3.994 2.94a1.144 1.144 0 0 0 1.767-.96v-.667z" />
                        </svg>
                    </button>
                </div>
                <form asp-action="Create" asp-controller="Category" asp-antiforgery="true" class="form-signin">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div id="border">
                        <h2 style="margin-bottom:20px" class="form-signin-heading">Adding Category</h2>
                        <div class="form-group">
                            <input id="name" class="form-control" type="text" asp-for="Name" placeholder="Category name">
                            <div class="text-danger">
                                <span asp-validation-for="Name"></span>
                            </div>
                            
                                <button class="w-100 btn btn-lg btn-primary btn-block" type="submit">Publicate</button>
                            </div>
                        
                    </div>
                </form>
            </div>
        </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    

</body>
</html>
