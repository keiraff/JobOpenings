
@model IEnumerable<JobOpenings.Models.Favourite>
@{ ViewData["Title"] = "Your Favs"; }


<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <title>Job List</title>

    <style>
        label:hover {
            cursor: pointer;
            color: var(--red) !important;
        }
    </style>


</head>


<body>
    <h3>Favourites</h3>
    <div class="container-fluid">
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Company</th>
                        <th scope="col">Date</th>
                        <th scope="col">Location</th>
                        <th scope="col">Salary</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fav in Model)
                    {
                        <tr>
                            <th scope="row">
                                <label onclick="document.location ='Vacancy/@fav.Vacancy.Id'">
                                    @fav.Vacancy.Name
                                </label>
                            </th>
                            <td>@Html.DisplayFor(modelItem => fav.Vacancy.Company.Name)</td>
                            <td>@fav.Vacancy.PublicationDate</td>
                            <td>@Html.DisplayFor(modelItem => fav.Vacancy.Company.Location)</td>
                            <td>@fav.Vacancy.Salary</td>
                            <td>
                                @if (fav == null)
                                {
                                    <button onclick="location.href='@Url.Action("Favourite", "Vacancy", new { id = fav.Vacancy.Id })';" class="btn btn-lg" style="background-color:transparent;">
                                        <svg style="background-color:transparent;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                            <path d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                        </svg>
                                    </button>
                                }
                                else
                                {
                                    <button onclick="location.href='@Url.Action("UnFavourite", "Vacancy", new { id = fav.Vacancy.Id })';" class="btn btn-lg" style="background-color:transparent;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                        </svg>
                                    </button>
                                }
                            </td>
                            <td>
                                <button onclick="location.href='@Url.Action("Submit", "Vacancy", new { id = fav.Vacancy.Id })';" class="btn btn-lg" style="background-color:transparent;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                                        <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
}
                </tbody>
            </table>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    
</body>
</html>
