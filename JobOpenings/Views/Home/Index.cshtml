@page



<!DOCTYPE html>

<html lang="ru">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <style>

        .carousel-inner {
            position: relative;
            width: 670px;
            height: 370px;
            overflow: hidden;
        }

        .carousel {
            margin: auto;
            margin-bottom: 60px;
            width: 670px;
            height: 370px;
        }
        .carousel-caption.text-left {
            margin-bottom:40px;
        }
        .p {
        }
    </style>
</head>


<body>
    @if (ViewBag.Username != null)
    {
        
            <p>Hello, @ViewBag.Username!</p>
        
    }

    
    <div class="container slider">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://www.equityeffect.com/wp-content/uploads/2020/08/GettyImages-926732776.jpg" alt="First slide">
                    <div class="carousel-caption text-left">
                        <h1>Welcome to our website!</h1>
                        <p>Here you can find a job or create a job advertisement.</p>
                        <p><button class="btn  btn-primary" onclick="document.location ='../../Account/Login'" role="button">Sign up today</button></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://contently.net/wp-content/uploads/2014/06/shutterstock_126964868.jpg" alt="Second slide">
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>Register</h2>
                <p>Register and fill in your contact information to respond to the vacancy. </p>
                <br>
                <p><a class="btn btn-secondary" onclick="document.location ='../../Account/Register'" role="button">View details »</a></p>
            </div>
            <div class="col-md-4">
                <h2>Sign in</h2>
                <p>Login to create or reply to a vacancy, add to your own favorites. </p>
                <br>
                <p><button class="btn btn-secondary" onclick="document.location ='../../Account/Login'" role="button">View details »</button></p>
            </div>
            <div class="col-md-4">
                <h2>Search</h2>
                <p>You can go directly to the search without registering and logging in, but some actions will be limited.</p>
                <p><button class="btn btn-secondary" onclick="document.location ='../../Vacancy'" role="button">View details »</button></p>
            </div>
        </div>


    </div>
</body>
</html>
