@model JobOpenings.ViewModels.RegisterModel
@{
    ViewBag.Title = "Registration";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <style>
        .form-signin {
            max-width: 400px;
            padding: 15px;
            margin: 0 auto;
        }

            .form-signin .form-signin-heading {
                margin-bottom: 10px;
            }

            .input {
                margin-bottom: 1px;
                border-bottom-left-radius: 0;
                border-bottom-right-radius: 0;
            }

        .button {
            margin-top: 10px;
        }

        .text-danger {
            margin-bottom: 5px;
            text-align: left;
        }

        .validation-summary-errors {
            color: #d9534f;
        }
    </style>
</head>

<body class="text-center" data-new-gr-c-s-check-loaded="14.1012.0" data-gr-ext-installed="">

    <div class="container">
        <main class="form-signin">

            <form asp-action="Register" asp-controller="Account" asp-antiforgery="true" class="form-signin">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div>
                        <h2 style="margin-bottom:20px" class="form-signin-heading">Please registry</h2>
                        <div class="form-group">
                            <input type="text" id="name" class="form-control" asp-for="Name" placeholder="Name">
                            <input type="text" id="email" class="form-control" asp-for="Email" placeholder="Email address">
                            <input id="password" class="form-control" type="password" asp-for="Password" placeholder="Password">
                            <input id="confirmPassword" class="form-control" type="password" asp-for="ConfirmPassword" placeholder="Confirm password">
                            <div class="text-danger">
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="text-danger">
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="text-danger">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="text-danger" style="margin-bottom:20px">
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <button class="w-100 btn-lg btn-primary btn-block" type="submit">Regestry</button>
                        </div>
                    </div>
            </form>
            </main>
        

    </div>

</body>
</html>