@model JobOpenings.Models.Submit
@{ ViewData["Title"] = "Submit Info";
                Layout = "~/Views/Shared/_Layout.cshtml"; }


<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <style>
        dl {
            width: 50%;
            overflow: hidden;
            padding: 0;
            margin: 0
        }

        dt {
            float: left;
            width: 50%;
            padding: 0;
            margin: 0
        }

        dd {
            float: left;
            width: 50%;
            padding: 0;
            margin: 0
        }
    </style>

</head>

<body>
    <h3>@Html.DisplayFor(model => model.Vacancy.Name)</h3>
    <sub>
        @Html.DisplayFor(model => model.Vacancy.PublicationDate)
    </sub>
    <div>
        <dl>
            <dt>
                Company
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vacancy.Company.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Vacancy.Company.Location)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vacancy.Company.Location)
            </dd>
            <dt>
                Category
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vacancy.Category.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Vacancy.Salary)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vacancy.Salary)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Vacancy.Schedule)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vacancy.Schedule)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Vacancy.Experience)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Vacancy.Experience)
            </dd>
        </dl>
    </div>
    <h4>Your Parsonal Data</h4>
    <div>
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Surname)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Surname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                Mobile Number
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MobilePhone)
            </dd>
        </dl>
    </div>
    <br />
    <div>
        <button onclick="document.location='../Submit';" class="btn btn-lg" style="background-color:transparent;">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-reply" viewBox="0 0 16 16">
