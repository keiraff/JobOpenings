
@model IEnumerable<JobOpenings.Models.Submit>
@{ ViewData["Title"] = "Your Replies"; }


<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <style>
        label:hover {
            cursor: pointer;
            color: var(--red) !important;
        }
    </style>


</head>


<body>
    <h3>Replies</h3>
    <div class="container-fluid">
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Company</th>
                        <th scope="col">Publication Date</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Date Of Reply</th>
                        <th scope="col">Full Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submit in Model)
                    {
                    <tr>
                        <th scope="row">
                            <label onclick="document.location ='Submit/@submit.Id'">
                                @submit.Vacancy.Name
                            </label>
                        </th>
                        <td>@Html.DisplayFor(modelItem => submit.Vacancy.Company.Name)</td>
                        <td>@submit.Vacancy.PublicationDate</td>
                        <td>@submit.Vacancy.Salary</td>
                        <td>@submit.PublicationDate</td>
                        <td>@submit.Name @submit.Surname</td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", "Submit", new { id = submit.Id })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

</body>
</html>
