
@model IEnumerable<JobOpenings.Models.Submit>
@{ ViewData["Title"] = "Your Replies"; }


<!DOCTYPE html>

<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <style>
        label:hover {
            cursor: pointer;
            color: var(--red) !important;
        }
    </style>


</head>


<body>
    <h3>Replies</h3>
    <div class="container-fluid">
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Company</th>
                        <th scope="col">Publication Date</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Date Of Reply</th>
                        <th scope="col">Full Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submit in Model)
                    {
                    <tr>
                        <th scope="row">
                            <label onclick="document.location ='Submit/@submit.Id'">
                                @submit.Vacancy.Name
                            </label>
                        </th>
                        <td>@Html.DisplayFor(modelItem => submit.Vacancy.Company.Name)</td>
                        <td>@submit.Vacancy.PublicationDate</td>
                        <td>@submit.Vacancy.Salary</td>
                        <td>@submit.PublicationDate</td>
                        <td>@submit.Name @submit.Surname</td>
                        <td>
                            <button onclick="location.href='@Url.Action("Delete", "Submit", new { id = submit.Id })';" class="btn btn-lg" style="background-color:transparent;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                            </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    
</body>
</html>
